{
  "compilerOptions": {
    "module": "umd",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2020", "DOM"],
    "baseUrl": "./lib",
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["lib"]
}
